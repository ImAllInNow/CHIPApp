<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chiprogram.chipapp" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <permission
        android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_chip_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".IntroScreenActivity"
            android:label="@string/title_activity_intro_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterOrEditActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chiprogram.chipapp.HomeActivity" />
        </activity>
        <activity
            android:name=".DiscussionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_discussion"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chiprogram.chipapp.HomeActivity" />
        </activity>
        <activity
            android:name=".ModuleListActivity"
            android:label="@string/title_module_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chiprogram.chipapp.HomeActivity" />
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:label="@string/title_activity_assessment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ChapterTabsActivity" />
        </activity>
        <activity
            android:name=".AboutCHIPActivity"
            android:label="@string/title_activity_about_chip" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ProfileActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".NavItemTabsActivity"
            android:label="@string/title_activity_navitem_tabs" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chiprogram.chipapp.ChapterListActivity" />
        </activity>

        <receiver
            android:name=".classes.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="chiprogram.chipapp" />
            </intent-filter>
        </receiver>

        <service android:name=".classes.GcmIntentService" />

        <activity
            android:name=".webview.WebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_web_view"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
